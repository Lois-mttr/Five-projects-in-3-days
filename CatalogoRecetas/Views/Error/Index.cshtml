@* Ubicación: ~/Views/Error/Index.cshtml *@
@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="error-container">
    <div class="error-content">
        <div class="error-icon">
            <i class="icon-error-large"></i>
        </div>

        <h1 class="error-title">¡Oops! Algo salió mal</h1>

        <p class="error-message">
            Lo sentimos, ha ocurrido un error inesperado.
            Nuestro equipo ha sido notificado y está trabajando para solucionarlo.
        </p>

        <div class="error-actions">
            @Html.ActionLink("Volver al Inicio", "Index", "Recetas", null, new { @class = "btn btn-primary" })
            <button onclick="history.back()" class="btn btn-outline">Página Anterior</button>
        </div>

        <div class="error-help">
            <h3>¿Qué puedes hacer?</h3>
            <ul>
                <li>Verificar que la URL esté escrita correctamente</li>
                <li>Intentar recargar la página</li>
                <li>Volver a la página principal</li>
                <li>Contactar al administrador si el problema persiste</li>
            </ul>
        </div>
    </div>
</div>

<style>
    .icon-error-large::before {
        content: "⚠️";
        font-size: 4rem;
    }

    .error-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 60vh;
        padding: 40px 20px;
    }

    .error-content {
        text-align: center;
        max-width: 600px;
        background: var(--white);
        padding: 40px;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
    }

    .error-icon {
        margin-bottom: 20px;
    }

    .error-title {
        font-size: 2rem;
        color: var(--primary-color);
        margin-bottom: 20px;
    }

    .error-message {
        font-size: 1.1rem;
        color: var(--dark-gray);
        margin-bottom: 30px;
        line-height: 1.6;
    }

    .error-actions {
        margin-bottom: 30px;
    }

        .error-actions .btn {
            margin: 0 10px;
        }

    .error-help {
        text-align: left;
        background: var(--light-gray);
        padding: 20px;
        border-radius: var(--border-radius);
    }

        .error-help h3 {
            color: var(--primary-color);
            margin-bottom: 15px;
        }

        .error-help ul {
            list-style-type: disc;
            padding-left: 20px;
        }

        .error-help li {
            margin-bottom: 8px;
            color: var(--dark-gray);
        }
</style>
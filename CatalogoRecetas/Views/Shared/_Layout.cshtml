@* Ubicación: ~/Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Catálogo de Recetas</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <div class="navbar-brand">
                <a href="@Url.Action("Index", "Recetas")">
                    <span class="brand-icon">RL</span>
                    <span class="brand-text">Mi Catálogo de Recetas</span>
                </a>
            </div>
            <div class="navbar-menu">
                <a href="@Url.Action("Index", "Recetas")" class="nav-link">Inicio</a>
                <a href="@Url.Action("Crear", "Recetas")" class="nav-link">Nueva Receta</a>
                <a href="@Url.Action("Estadisticas", "Recetas")" class="nav-link">Estadísticas</a>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Mi Catálogo Personal de Recetas</p>
        </div>
    </footer>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

<style>
.navbar {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    padding: 15px 0;
    box-shadow: var(--shadow);
}

.navbar .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.navbar-brand a {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: var(--white);
    font-size: 1.5rem;
    font-weight: 600;
}

.brand-icon {
    font-size: 2rem;
    margin-right: 10px;
}

.navbar-menu {
    display: flex;
    gap: 30px;
}

.nav-link {
    color: var(--white);
    text-decoration: none;
    font-weight: 500;
    transition: var(--transition);
    padding: 8px 16px;
    border-radius: var(--border-radius);
}

.nav-link:hover {
    background-color: rgba(255,255,255,0.1);
    color: var(--white);
}

.main-content {
    min-height: calc(100vh - 140px);
    padding: 20px 0;
}

.footer {
    background-color: var(--primary-color);
    color: var(--white);
    text-align: center;
    padding: 20px 0;
    margin-top: 40px;
}

</style>